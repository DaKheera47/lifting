###############################################
# Lifting Pipeline Environment Configuration  #
###############################################
# Copy this file to .env and customize values.
# Generate a strong token (>= 48 chars):
#   python -c "import secrets;print(secrets.token_urlsafe(48))"

# Token required for POST /ingest and protected debug endpoints
INGEST_TOKEN=replace_with_long_random_token

# Comma-separated list of origins allowed for browser access (CORS)
ALLOWED_ORIGINS=http://localhost,http://127.0.0.1,https://lifting.example.com

# Max CSV upload size in MB (Strong exports are usually < 1MB)
MAX_UPLOAD_MB=10

# Logging verbosity (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Local timezone (used for display logic client-side)
TZ=Europe/London

# Uncomment to override uvicorn host/port when using docker-compose
# HOST=0.0.0.0
# PORT=8069

